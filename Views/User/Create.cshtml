@model SayItWebsiteNet5.Models.User


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    
<h4>Opret Bruger</h4>
<hr />
<div class="row">
    <div class="col-md-4">
            @if(ViewBag.Message != null)
            {
                <div class="p-1 mb-2 bg-success">@ViewBag.Message</div>
            }
            @if(ViewBag.Error != null)
            {
                <p class="text-danger">
                    @ViewBag.Error
                </p>
            }
            <!-- Beautify this shit-->
           
            <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div>
                @if(ViewBag.roles != null)
                {
                    <div>
                        <p>Skriv rollen, hvis den ønskes tilføjet</p>
                    </div>
                    @foreach(var role in ViewBag.roles)
                    {
                        <div class"form-group">       
                            <label asp-for="Roles" class="control-label">@role</label>
                            <input asp-for="Roles" class="form-control" />                       
                        </div>
                    }
            }
            </div>
            <div class="form-group">
                <input type="submit" value="Opret" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
   
    <a asp-controller="Student" asp-action="Index" class="btn btn-primary">Tilbage til elever </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>